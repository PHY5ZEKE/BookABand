<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    android:orientation="vertical"
    tools:context=".CreateUser">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="264dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:gravity="clip_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/uploadPfp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="59dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/icon_only" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="68dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:text="Profile"
            android:textColor="#F5E8C7"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="229dp"
        android:layout_height="32dp"
        android:layout_marginTop="112dp"
        android:text="Click this to upload image"
        android:textAlignment="center"
        android:textColor="#F5E8C7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <ImageView
        android:id="@+id/uploadPfp"
        android:layout_width="93dp"
        android:layout_height="83dp"
        android:scaleType="fitXY"
        android:src="@drawable/upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/saveUser"
        android:layout_width="192dp"
        android:layout_height="62dp"
        android:backgroundTint="#435585"
        android:text="Save"
        android:textSize="24sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="323dp"
        android:layout_height="284dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.119">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="Organizer Name"
            android:textColor="#F5E8C7" />

        <EditText
            android:id="@+id/uploadName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:gravity="start|center_vertical"
            android:hint="Name"
            android:padding="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="Contact no."
            android:textColor="#F5E8C7" />

        <EditText
            android:id="@+id/uploadContact"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:gravity="start|center_vertical"
            android:hint="Contact"
            android:padding="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="291dp"
            android:layout_height="19dp"
            android:text="Short Description"
            android:textColor="#F5E8C7" />

        <EditText
            android:id="@+id/uploadUserDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:gravity="start|center_vertical"
            android:hint="Description"
            android:padding="16dp"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
